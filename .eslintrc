{
	"root": true,
	"env": {
		"node": true,
		"jest": true
	},
	"extends": ["plugin:vue/essential", "eslint:recommended", "@vue/typescript"],
	"parserOptions": {
		"parser": "@typescript-eslint/parser"
	},
	"rules": {
		"semi": ["error", "always"]
	},
	"overrides": [
		{
			"files": ["**/tests/unit/**/*.spec.{j,t}s?(x)"],
			"env": {
				"jest": true
			}
		},
		{
			"files": ["**/tests/unit/**/*.spec.{j,t}s?(x)"],
			"env": {
				"jest": true
			}
		}
	]
}
